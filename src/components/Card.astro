---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';


interface Props {
	title: string;
	services: string[];
	img: ImageMetadata;
	openAt: string;
}

const { title, services, img, openAt } = Astro.props;
---

<li class="restaurant-card">
	<div >
		<div class="image-wrapper">
			<Image src={img} alt={title} class="restaurant-image" style="height: 100%; width: 100%; object-fit: cover;"/>
		</div>
		<h2>
			{title}
		</h2>
		<p>
			{
				services.map((service) => {
					return (
						<span>{service}</span>
					)
				})
			}
		</p>
		<p class="openAt">
			Horario: {openAt}
		</p>
	</div>
</li>
<style>
	.restaurant-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.restaurant-card > div {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		margin-top: 0.5rem;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		display: flex;
		flex-wrap: wrap;
	}

	p > span {
		margin-right: 1.5rem;
	}

	.openAt {
		font-size: 1rem;
		color: #d3dbee;
	}

	.image-wrapper {
		height: 200px;
		overflow: hidden;
		border-radius: 8px;
	
	}

	.restaurant-image {
		mask-image: 
			linear-gradient(
				to bottom,
				black 90%,
				transparent
			);
	}

	.restaurant-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.restaurant-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
